<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbarSize="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/topod" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="25"
                android:background="@drawable/icone_border"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/historia78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="25"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hotel78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="25"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/gastronomia78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="25"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/natureza78red"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="25"
                android:paddingLeft="0dp"
                android:text="História"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="25"
                android:paddingLeft="20dp"
                android:text="Hotelaria"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="25"
                android:paddingLeft="10dp"
                android:text="Gastronomia"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="25"
                android:paddingLeft="10dp"
                android:text="Natureza"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/praca78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/relegioso78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/esporte78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/rural78red"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="0dp"
                android:text="Praças"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="Religioso"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Esportivo"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="Rural"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hospital78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/monumento78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton13"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/artesanato78red"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/eventos78red"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Saúde"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monumento"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Artesanato"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Eventos"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro" />
        </LinearLayout>

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/editAutoCompletar"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:background="#B3FFFFFF"
        android:completionHintView="@drawable/botao_login"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Pesquisar"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"

        android:textColorHint="#80000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/editAutoCompletar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editAutoCompletar"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/login_b" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/editAutoCompletar"
        app:layout_constraintEnd_toStartOf="@+id/editAutoCompletar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>