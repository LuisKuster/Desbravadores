<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/botao_borda_verde_radius"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/imgLocal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cachoeira_tabarelli" />

            <TextView
                android:id="@+id/txtNomeLocal"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
                android:text="(47) 3352-8330"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btnCurtirLocal"
                app:layout_constraintStart_toEndOf="@+id/imgLocal"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/cor_text_verde_escuro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnCurtirLocal"
                app:layout_constraintStart_toEndOf="@+id/imgLocal"
                app:layout_constraintTop_toBottomOf="@+id/txtNomeLocal" />

            <CheckBox
                android:id="@+id/btnCurtirLocal"
                android:layout_width="56dp"
                android:layout_height="68dp"
                android:button="@drawable/ic_telefone"
                android:checked="false"
                android:contentDescription="@string/curitr"
                android:paddingHorizontal="4dp"
                android:theme="@style/cor_check_box_verde"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>